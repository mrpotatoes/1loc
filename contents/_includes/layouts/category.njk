---
layout: layouts/base.njk
pagination:
  data: collections.andric
  size: 10
  alias: posts
---

{% set previousPost = collections.sortByTitle | getPreviousCollectionItem(page) %}
{% set nextPost = collections.sortByTitle | getNextCollectionItem(page) %}

<div class="container">
    <div class="header">
        <div class="header__breadcrumb">
            <a class="header__link" href="/">[Home]</a>&nbsp;>&nbsp;
            <span>{{ title | titlecase }}</span>
        </div>
    </div>

    <ol>
    {%- for post in posts %}
        {% set condish = post.data.category === title %}

        {%- if condish %}
            <li>{{post.data.category}} - <a href="{{ post.data.page.url }}">{{ post.data.title }}</a></li>
        {% endif -%}
    {% endfor -%}
    </ol>
    <hr>
    <ul>
        <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous</a>{% else %}Previous{% endif %}</li>
        <li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next</a>{% else %}Next{% endif %}</li>
    </ul>

    <div class="category">
        <h1 class="category__name">{{ title }}</h1>
        <div class="category__posts2">
            {%- for post in collections.groupByCategories[title] -%}
                <div class="content">
                    <div class="card__item">
                        <a class="card__link" href="{{ post.url }}">{{ post.data.title }}</a>
                    </div>
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>